<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/P_Icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:src="@mipmap/avatar_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="@string/P_Name"
                    android:textColor="@color/black_slight"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/P_Name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="请输入姓名"
                    android:textColor="@color/gray_1"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="性别"
                    android:textColor="@color/black_slight"
                    android:textSize="16dp" />

                <RadioGroup
                    android:id="@+id/P_Gender_Group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <RadioButton
                        android:id="@+id/P_Gender_button1"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:background="@drawable/radiobutton_background"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="@string/man"
                        android:textColor="@color/radiobutton_textcolor"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/P_Gender_button2"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/radiobutton_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/woman"
                        android:textColor="@color/radiobutton_textcolor"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>
            <!--性别-->
            <!--电话-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="电话"
                    android:textColor="@color/black_slight"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/P_Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请在这里输入"
                    android:textColor="@color/gray_1"
                    android:textSize="14dp" />
            </LinearLayout>
            <!--电话-->
            <!--邮件-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="邮件"
                    android:textColor="@color/black_slight"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/P_Mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请在这里输入"
                    android:textColor="@color/gray_1"
                    android:textSize="14dp" />
            </LinearLayout>
            <!--邮件-->
            <!--生日-->
            <LinearLayout
                android:id="@+id/birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="生日"
                    android:textColor="@color/black_slight"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/birth_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="6dp"
                    android:text="请选择生日"
                    android:textColor="@color/gray_1"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="6dp"
                    android:src="@mipmap/jiantou" />
            </LinearLayout>
            <!--生日-->
            <!--地址-->
            <LinearLayout
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="住址"
                    android:textColor="@color/black_slight"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/address_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="6dp"
                    android:text="请选择住址"
                    android:textColor="@color/gray_1"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="6dp"
                    android:src="@mipmap/jiantou" />
            </LinearLayout>

            <!--地址-->
            <!--民族-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="民族"
                    android:textColor="@color/black_slight"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/P_National"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/radiobutton_background"
                    android:checked="true"
                    android:gravity="center"
                    android:text="汉"
                    android:textColor="@color/radiobutton_textcolor"
                    android:textSize="14sp" />

            </LinearLayout>
            <!--民族-->
            <!--信仰-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="信仰"
                        android:textColor="@color/black_slight"
                        android:textSize="16dp" />
                    <RadioGroup
                        android:id="@+id/P_Faith_Group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <!--<LinearLayout-->
                        <!--android:orientation="horizontal"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content">-->
                        <RadioButton
                            android:checked="true"
                            android:id="@+id/P_Faith_button1"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/radiobutton_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="佛教"
                            android:textColor="@color/radiobutton_textcolor"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/P_Faith_button2"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="-36dp"
                            android:background="@drawable/radiobutton_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="道教"
                            android:textColor="@color/radiobutton_textcolor"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/P_Faith_button3"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="200dp"
                            android:layout_marginTop="-36dp"
                            android:background="@drawable/radiobutton_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="基督教"
                            android:textColor="@color/radiobutton_textcolor"
                            android:textSize="14sp" />
                        <!--</LinearLayout>-->
                        <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="left"-->
                        <!--android:orientation="horizontal"-->
                        <!--android:padding="10dp">-->

                        <RadioButton
                            android:id="@+id/P_Faith_button4"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/radiobutton_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="伊斯兰教"
                            android:textColor="@color/radiobutton_textcolor"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/P_Faith_button5"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="-36dp"
                            android:background="@drawable/radiobutton_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="妈祖"
                            android:textColor="@color/radiobutton_textcolor"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/P_Faith_button6"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="200dp"
                            android:layout_marginTop="-36dp"
                            android:background="@drawable/radiobutton_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="自定义"
                            android:textColor="@color/radiobutton_textcolor"
                            android:textSize="14sp" />
                        <!--</LinearLayout>-->
                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="信仰"
                        android:textColor="@color/black_slight"
                        android:textSize="16dp" />

                </LinearLayout>
            </LinearLayout>
            <!--信仰-->
            <!--学历-->
            <LinearLayout
                android:id="@+id/degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="学历"
                    android:textColor="@color/black_slight"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/degree_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="6dp"
                    android:text="请选择学历"
                    android:textColor="@color/gray_1"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="6dp"
                    android:src="@mipmap/jiantou" />
            </LinearLayout>
            <!--学历-->
            <!--备注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="备注"
                    android:textColor="@color/black_slight"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/mark_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/AppBackgroud"
                    android:text="请在这里输入"
                    android:textColor="@color/gray_1"
                    android:textSize="16dp" />
            </LinearLayout>
            <!--备注-->
            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/Wite"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>